#!/bin/sh -x

export JAVA_HOME=/usr/lib/jvm/jdk-17
export BASEDIR=$(dirname $(readlink -f $0))/..

cd $BASEDIR

export INCLUDES="-I$JAVA_HOME/include -I$JAVA_HOME/include/linux"
export SOURCES="native/complex_plot.c native/arb_wrap.c"

gcc -O3 -fPIC -shared $SOURCES $INCLUDES -olibarblib.so -lflint-arb 
